.container{
  width:100%;
  height:100%;
  
}
.myImg{
  width:100%;
  height: 100%;
}
/* 1.左侧 */
.nav_left{
  /* border: 1px solid red; */
  display: inline-block;
  width:25%;
  height: 100%;
  text-align: center;
  justify-content: center;
  font-size:18px;
  font-weight: 200;
  font-family: '宋体';
  color: #444;
  line-height: 60px;
}
/* 2.右侧 */
.nav_right{
  display: flex;
  flex-wrap: wrap;
  width:75%;
  float: right;
  box-sizing: border-box;
  justify-content: space-around;/*水平居中*/
}
.right_item{
  box-sizing: border-box;
  width:48%;
  display: flex;
  height:100%;
  flex-direction: column;/*按列的方向*/
  justify-content: center;/*水平居中*/
  align-items: center;/*垂直居中*/
  font-size:14px;
  color: #444;
}
.nav_right image{
  width:250rpx;
  height:250rpx;
}
