/* 一：轮播图*/
.container, .container image,.container swiper{
  width:100%;
  height:300rpx;
}
/* 二：九宫格--整体 */
.index-nav{
  display: flex;
  flex-wrap: wrap;
}
/* 二：九宫格---子元素 */
.nav-item{
  width:33.333%;
  height:200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;/*按列的方向*/
  justify-content: center;/*水平居中*/
  align-items: center;/*垂直居中*/
  font-size:14px;
  /*1px的边框*/
  border-right: 1rpx solid #ccc; /*右侧边框*/
  border-bottom: 1px solid #ccc;/*底部边框*/
}
.nav-item:nth-child(3n){
  border-right:1 none; /*3  6  9 去右侧边线*/
}
/* 二：九宫格---子元素中的图片 */
.nav-item image{
  width:102rpx;
  height:102rpx;
}
/* 三：热销商品 */
/* 功能四：按钮 */
.index-hot{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 42rpx;
}
.index-hot .hot-item{
  width:50%;
  display: flex;
  justify-content: center;
}
.index-hot image{
  width:320rpx;
  height:178rpx;
}